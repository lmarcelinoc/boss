{
  "name": "@app/api",
  "version": "1.0.0",
  "description": "NestJS backend API for SaaS boilerplate",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rm -rf dist coverage",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "test:setup": "npm run db:reset:test",
    "test:cleanup": "npm run db:drop:test",
    "db:seed": "ts-node scripts/seed-database.ts",
    "db:test-seeding": "ts-node scripts/test-seeding.ts",
    "db:seed:analytics": "ts-node scripts/seed-analytics.ts",
    "db:seed:analytics:full": "./scripts/seed-analytics.sh",
    "db:seed:plans": "ts-node scripts/seed-subscription-plans.ts",
    "db:seed:plans:full": "./scripts/seed-plans.sh",
    "db:seed:all": "ts-node scripts/seed-all.ts",
    "db:seed:all:full": "./scripts/seed-all.sh",
    "test:postman": "./scripts/test-postman-bulk-operations.sh",
    "test:postman:install": "npm install -g newman",
    "test:postman:bulk": "newman run ../../postman/collections/SaaS-Boilerplate-API.postman_collection.json -e ../../postman/environments/Development.postman_environment.json --folder 'Bulk Import Operations' --folder 'Bulk Export Operations' --folder 'Bulk Operations Dashboard'",
    "db:generate-export-data": "ts-node scripts/generate-export-test-data.ts"
  },
  "dependencies": {
    "@app/config": "*",
    "@app/shared": "*",
    "@google-cloud/storage": "^7.16.0",
    "@nestjs/bull": "^10.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.1.0",
    "@nestjs/throttler": "^5.0.0",
    "@prisma/client": "^6.16.2",
    "@nestjs/websockets": "^10.0.0",
    "@types/mjml": "^4.7.4",
    "@types/puppeteer": "^7.0.4",
    "argon2": "^0.44.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "bull": "^4.11.0",
    "cache-manager": "^7.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.2",
    "exceljs": "^4.4.0",
    "expo-server-sdk": "^3.7.0",
    "express": "^5.1.0",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.10.0",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^5.5.0",
    "mjml": "^4.15.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.0",
    "puppeteer": "^24.19.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.0",
    "speakeasy": "^2.0.0",
    "stripe": "^13.0.0",
    "twilio": "^4.10.0",
    "uuid": "^11.1.0",
    "webpack": "^5.101.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/aws-sdk": "^2.7.4",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/glob": "^9.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.9",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "jest": "^29.5.0",
    "shadcn": "^3.2.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "prisma": "^6.16.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "../jest.setup.ts"
    ],
    "maxWorkers": 1
  }
}
