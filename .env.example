# Development Tools
# MinIO Configuration (S3 Compatible)
# MinIO is an S3-compatible object storage server for development and testing
# It provides the same API as AWS S3 but runs locally without costs
# Web Console: http://localhost:9001 (login: minioadmin/minioadmin123)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET=saas-files
MINIO_REGION=us-east-1
MINIO_FORCE_PATH_STYLE=true
MINIO_PUBLIC_URL=http://localhost:9000/saas-files
# MinIO Advanced Configuration
MINIO_MAX_FILE_SIZE=104857600
MINIO_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt
MINIO_HEALTH_CHECK_INTERVAL=30000
MINIO_RETRY_ATTEMPTS=3
MINIO_TIMEOUT=30000
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
MAILHOG_WEB_PORT=8025
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_FEATURES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19000
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_PORT=3002
WS_PATH=/ws

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=30000

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE_TIMEOUT=60000
REDIS_POOL_IDLE_TIMEOUT=30000 